{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "types": ["node"]
    },
    "exclude": [
        "node_modules",
        "node_modules",
        "dist",
        "typings",
        "typings/main",
        "typings/main.d.ts",
        "typings/index.d.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
